%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%% Insert PDF pages to Doc %%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand\invisiblesection[1]{%
	\refstepcounter{section}%
	\addcontentsline{toc}{section}{\protect\numberline{\thesection}#1}%
	\sectionmark{#1}}
%%=============================================================================
%% Usage:
%%       1. Syntax: - \includepdf[pages=1-last]{path/filename}
%%        
%%       2. Syntax: - \mypdfpage{Title}{file}    
%%                     Inserts single-page pdf, Title goes-> ToC
%%            E.g.: - \mypdfpage{Transistor circuit}{./pdf/ckt}   % ckt.pdf is in ./pdf/
%%
%%       3. Syntax: - \mypdf{Title}{File}        
%%                    Inserts multi-page pdf,   Title goes-> ToC
%%            E.g.: - \mypdf{Laplace Transform}{./pdf/laplace}    % laplace.pdf is in ./pdf/
%%
%%       4. Syntax: - \mypdfB{Title}{File}        
%%                    Inserts multi-page pdf, starting from pg.2,   Title goes-> ToC
%%            E.g.: - \mypdfB{Course Outline}{./pdf/outline}      % outline.pdf is in ./pdf/
%        
%        
%%=============================================================================
\newcommand{\mypdfpage}[2]%   2. \mypdfpage{Title}{file}  %% Inserts single-page pdf, Title goes-> ToC
{   \np\thispagestyle{empty}
    \includepdf[]{}pdf[pages=1, pagecommand={\invisiblesection{#1}}]{#2}
}

\newcommand{\mypdf}[2]%       3. \mypdf{Title}{File}   %% Inserts multi-page pdf,   Title goes-> ToC
{	\np\pagestyle{empty}
	\includepdf[pages=1, pagecommand={\invisiblesection{#1}}]{#2}
	\includepdf[pages=2-last]{#2}
}

\newcommand{\mypdfB}[2]%      4. \mypdfB{Title}{File}  %% Inserts multi-page pdf, starting from pg.2,   Title goes-> ToC
{   \np\pagestyle{empty}
	\includepdf[pages=2, pagecommand={\invisiblesection{#1}}]{#2}
	\includepdf[pages=3-last]{#2}
}


