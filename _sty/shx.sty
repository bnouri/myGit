%===============================================================================
%%%       Boxing & Framing    --   Using: tcolorbox environment              %%%
%===============================================================================
% Usage:   To put operand-text into
% ------
% 1) \begin{gbox} \centering ...\end{gbox}   -> In "\textwidth gray-box, non-framed" (Non-bordered)
%
% 2) \begin{gboxf}\centering ...\end{gboxf}  -> In "\textwidth gray-box, framed"
%
% 3) \colorbox{mygray}{...}
%
% 4) \gboxinline{...}           -> \textbf{text} in "inline \textwidth gray-box, non-framed"
%
%
% 5) \begin{SBN}...\end{SBN}    -> in "\textwidth gray-box, non-framed"
% 6) \begin{MBOX}...\end{MBOX}  -> in "\textwidth gray-box, between two parallel lines"
%-------------------------------------------------------------------------------

%% 1)
\newtcolorbox{gbox}{colback=mygray, 
                    colframe=mygray, boxrule=-0pt, arc=1mm, frame hidden,  enhanced,  %% boxrule=-0pt, frame hidden --> No-boxed 
                    width=\textwidth,                                                 %% Default: \textwidth
                    grow to right by=-1cm, grow to left by=-1cm, 
                    left=6pt, right=6pt, top=4pt, bottom=4pt,                         %% Margins inside the box
                    box align=center, valign=center, %%halign=center,                 %% Alignments inside the box
                    boxsep=0pt, breakable, center,
                    }

%% 2)
\newtcolorbox{gboxf}{colback=mygray, 
                     colframe=black, boxrule=0.5pt, arc=1mm, %frame hidden, enhanced %% boxrule=-0pt, frame hidden --> No-boxed 
                     width=\textwidth,                                               %% Default: \textwidth
                     grow to right by=-1cm, grow to left by=-1cm, 
                     left=6pt, right=6pt, top=4pt, bottom=4pt,                       %% Margins inside the box
                     box align=center, valign=center, %%halign=center,               %% Alignments inside the box
                     boxsep=0pt, breakable, center,
                     }

%% 4)
\newcommand{\gboxinline}[1]{\colorbox{mygray}{\color{black}\bfseries#1}}


%% 5)
\newtcolorbox{SBN}{colback=gray!25,  %mygray
                   colframe=gray!25, boxrule=-0pt, arc=1mm, frame hidden, enhanced, %% boxrule=-0pt, frame hidden --> No-boxed     
                   width=0.75\textwidth,                                            %% Default: \textwidth
                   grow to right by=0mm, grow to left by=0mm, 
                   left=6pt, right=6pt, top=4pt, bottom=4pt,                        %% Margins inside the box
                   box align=center, valign=center, %halign=center,                 %% Alignments inside the box
                   boxsep=0pt, 
                   breakable, center
                  }

%% 6) :
\newtcolorbox{MBOX}{colback=mygray,
	              colframe=black, arc=0pt, outer arc=0pt, frame hidden,%enhanced,-->Do not add enhance to MBOX
                    width=(\textwidth-6\parindent), grow to right by=0mm, grow to left by=0mm,  %% Default: \textwidth
                    left=6pt, right=6pt, top=6pt, bottom=6pt,                                   %% Margins inside the box
                    boxrule=-0pt, box align=center, valign=center, halign=center,               %% Alignments inside the box
                    boxsep=-3pt,                    
                    breakable, center, 
                    leftrule=-1px, bottomrule=0.5pt, rightrule=-1px,, toprule=0.5pt,            %% Top & Bottom Lines
                    % nobeforeafter, 
                    % beforeafter skip=12pt,
                    }



